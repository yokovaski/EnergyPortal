<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EnergieZicht</title>
    <link rel="stylesheet" href="~/css/bundle.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/@@mdi/font@5.x/css/materialdesignicons.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f8fa;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="navbar-brand" href="/">EnergieZicht</a>
                }
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" href="/">Actueel</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" href="/history">Historie</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
    <environment exclude="Development">
        <script type="module" src="~/js/bundle.js" asp-append-version="true"></script>
    </environment>
    <environment include="Development">
        <!-- Vite development server script -->
        <script type="module" src="https://localhost:5173/@@vite/client"></script>
        <script type="module" src="https://localhost:5173/main.js"></script>
    </environment>
@*     <environment exclude="Development"> *@
@*         <script type="module" src="~/js/bundle.js" asp-append-version="true"></script> *@
@*     </environment> *@
@*     <environment include="Development"> *@
@*         <!-- This also includes the css --> *@
@*         <script type="module" src="https://localhost:5173/@@vite/client"></script> *@
@*         <script type="module" src="https://localhost:5173/src/main.js"></script> *@
@*     </environment> *@
@*      *@

    <!-- This needs to be after the loading of jQuery, because the ValidationScriptsPartial depend on JQuery being loaded -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
